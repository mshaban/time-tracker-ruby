<h1>Works#index</h1>
<p>Find me in app/views/works/index.html.erb</p>


<table>
  <tbody>
  <tr>
    <th>View</th>
    <th>User</th>
    <th>Project</th>
    <th>Date</th>
    <th>hours</th>
  </tr>
  <% @works.each do |work| %>
      <tr>
        <td><%= link_to 'View', work %></td>
        <td><%= work.user %></td>
        <td><%= link_to work.project, work.project %></td>
        <td><%= work.datetimeperformed.strftime('%m/%d/%Y %H:%M') %></td>
        <td><%= work.hours %></td>
      </tr>
  <% end %>
  </tbody>

</table>

<% content_for :aside do %>
    <% render 'sidebar' %>
<% end %>